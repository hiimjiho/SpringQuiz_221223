<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="package com.quiz.lesson06.dao.SiteMapper">
 	<insert id="insertSite" parameterType="map">
 		INSERT INTO `site`
 		(
 			`name`
 			, `url`
 		)
 		VALUES
 		(
 			#{name}
 			, #{url}
 		)
 	</insert>
 
 
 	<select id="selectSite" resultType="com.quiz.lesson06.model.Site">
 		SELECT
 			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`site`
 	</select>
 
 </mapper>